<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>AI StudyPal</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="text-dark d-flex flex-column min-vh-100 bg-dark">

  <!-- ================= NAVBAR ================= -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
    <div class="container">

      <a class="navbar-brand fw-bold fs-4" href="/">ğŸ§  AI-StudyPal</a>

      <div class="d-flex align-items-center">

        <% if (user) { %>
          <a href="/previous-chats" class="btn btn-outline-light btn-sm me-2">Previous Chats</a>
          <a href="/new-chat" class="btn btn-warning btn-sm me-3">New Chat</a>
        <% } %>

        <% if (!user) { %>
          <a href="/login" class="btn btn-success btn-sm">Login</a>
        <% } else { %>

          <!-- Profile Dropdown -->
          <div class="dropdown">
            <a href="#" 
               class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" 
               id="profileDropdown" 
               data-bs-toggle="dropdown">


               <img 
                src="<%= user.profilePic ? user.profilePic : '/images/profile.jpg' %>" 
                class="rounded-circle border border-light me-2"
                width="42" 
                height="42"
                style="object-fit: cover;"
              >

              <span class="fw-semibold"><%= user.username %></span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow">


              <li>
                <a class="dropdown-item" href="/profile/me">
                  âš™ï¸ My Profile
                </a>
              </li>

              <li><hr class="dropdown-divider"></li>

              <li>
                <a class="dropdown-item text-danger" href="/logout">
                  ğŸšª Logout
                </a>
              </li>

            </ul>
          </div>

        <% } %>

      </div>
    </div>
  </nav>

  <!-- ================= ALERTS ================= -->
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success text-center rounded-0 m-0">
      <%= success %>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger text-center rounded-0 m-0">
      <%= error %>
    </div>
  <% } %>

  <!-- ================= MAIN CONTENT ================= -->
  <div class="container py-5 text-white">

    <h1 class="text-center mb-5 fw-bold">
      ğŸš€ Ask Your Smart Study Assistant
    </h1>

    <form action="/" method="POST" enctype="multipart/form-data" class="bg-black p-4 rounded shadow">

      <div class="mb-4">
        <label class="form-label fw-semibold">ğŸ’¬ Enter your question</label>
        <input type="text" name="question" class="form-control" placeholder="e.g., Explain Neural Networks..." required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-semibold">ğŸ“„ Upload PDF (optional)</label>
        <input type="file" name="pdf" accept="application/pdf" class="form-control">
      </div>

      <div class="mb-4">
        <label class="form-label fw-semibold">ğŸ–¼ï¸ Upload Image (optional)</label>
        <input type="file" name="image" accept="image/*" class="form-control">
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-lg">
          ğŸ¤– Ask StudyPal
        </button>
      </div>

      <div id="loading-spinner" class="text-center my-4" style="display: none;">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2">StudyPal is thinking...</p>
      </div>

    </form>

    <!-- ================= CONVERSATION ================= -->
    <% if (conversation && conversation.length > 0) { %>
      <div class="mt-5">
        <h2 class="text-center mb-4">ğŸ’¬ Conversation</h2>

        <% conversation.forEach(pair => { %>
          <div class="bg-black p-3 rounded mb-3 shadow-sm">
            <div class="fw-semibold text-info">ğŸ§‘ You:</div>
            <div class="mb-2"><%= pair.prompt %></div>

            <div class="fw-semibold text-warning">ğŸ¤– StudyPal:</div>
            <div><%- pair.response %></div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>

  <!-- ================= FOOTER ================= -->
  <footer class="bg-black text-white py-3 mt-auto border-top">
    <div class="container text-center">
      <p class="mb-0">
        Â© <%= new Date().getFullYear() %> AI StudyPal | Built by Tushar Rathor
      </p>
    </div>
  </footer>

  <script src="/js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
