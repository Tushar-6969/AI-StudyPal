<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chat Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f4f4;
    }

    .chat-message {
      max-width: 800px;
      margin: 20px auto;
      padding: 15px;
      border-radius: 10px;
      background-color: #ffffff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .chat-message .user-msg {
      font-weight: 600;
      margin-bottom: 8px;
    }

    .chat-message .ai-msg {
      background-color: #f8f9fa;
      border-left: 4px solid #0d6efd;
      padding: 10px 15px;
      border-radius: 5px;
      line-height: 1.6;
      white-space: pre-wrap;
    }

    .back-btn {
      display: block;
      max-width: 800px;
      margin: 30px auto;
      text-align: right;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <h1 class="text-center mb-4">📄 Chat Details</h1>

    <% if (chat && chat.conversation && chat.conversation.length > 0) { %>
      <% chat.conversation.forEach(pair => { %>
        <div class="chat-message">
          <div class="user-msg">🧑 You: <%= pair.prompt %></div>
          <div class="ai-msg">🤖 StudyPal: <%- pair.response %></div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center">No conversation data available.</p>
    <% } %>

    <div class="back-btn">
      <a href="/previous-chats" class="btn btn-secondary">← Back to Previous Chats</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
