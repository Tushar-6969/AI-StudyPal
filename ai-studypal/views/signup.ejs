<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up | AI StudyPal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .google-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      padding: 10px 20px;
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 4px;
      color: #444;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease-in-out;
    }

    .google-btn:hover {
      background: #f7f7f7;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      text-decoration: none;
      color: #222;
    }

    .google-icon {
      width: 20px;
      height: 20px;
    }
  </style>
</head>
<body class="bg-light d-flex flex-column min-vh-100">

  <!-- ‚úÖ Success Message -->
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success text-center rounded-0 mb-0">
      <%= success %>
    </div>
  <% } %>

  <!-- ‚ùå Error Message -->
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger text-center rounded-0 mb-0">
      <%= error %>
    </div>
  <% } %>

  <div class="container py-5">
    <h1 class="text-center mb-4">üîê Sign Up</h1>

    <!-- Signup Form -->
    <form action="/signup" method="POST" class="mx-auto p-4 shadow rounded bg-white" style="max-width: 500px;">
      <div class="mb-3">
        <label for="username" class="form-label fw-bold">Username</label>
        <input type="text" id="username" name="username" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label fw-bold">Password</label>
        <input type="password" id="password" name="password" class="form-control" required>
      </div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary">Create Account</button>
      </div>
    </form>

    <!-- OR Divider -->
    <div class="text-center my-3">
      <hr>
      <span class="bg-light px-2 text-muted">OR</span>
    </div>

    <!-- Google Signup Button -->
    <div class="text-center">
      <a href="/auth/google" class="google-btn mx-auto">
        <img class="google-icon" src="https://img.icons8.com/?size=100&id=17949&format=png&color=000000" alt="Google Logo">
        <span>Sign up with Google</span>
      </a>
    </div>

    <div class="text-center mt-3">
      Already have an account? <a href="/login" class="fw-bold text-decoration-none">Login here</a>
    </div>
  </div>

</body>
</html>
